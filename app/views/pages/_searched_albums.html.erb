<% unless @searched_albums.empty? %>
     <hr class="search-results-hr">
     </div>
     <% @searched_albums.each do |album| %>
       <div class="field form-group">
         <%= image_tag(album.image_preview_url, class: "dropdown-panel-preview-image") %>
            <div class="album-description">
              <%= album.name %>
              <%= album.release_date %>
            </div>
       </div>
     <% end %> 
<% end %>
