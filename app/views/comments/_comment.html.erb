<article>
   <div class="form-group inline-block">
      <%= image_tag("https://img.flaticon.com/icons/png/512/306/306007.png", class: "comment-avatar-preview-image small-right-interval") %>
      <div class="block">
         by <%= label_tag comment.user.email %><br/>
         <small><%= label_tag comment.content, nil, class: "comment" %></small>
      </div>
   </div>
   <div class="reply-button" data-for=".comment-<%= comment.id %>">
      <%= label_tag "reply", "Reply", class: "reply" %>
   </div>
   <div class="comment-form comment-<%= comment.id %>">
      <%= render partial: "comments/form", locals: { album: comment.album, parent: comment } %>
   </div>
   <div class="sub-comment">
      <%= render comment.comments %>
   </div>
</article>

<hr class="comment-hr"/>
