<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag params[:controller] %>

<h1>Tracks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Source link</th>
      <th>Release date</th>
      <th>Duration</th>
      <th>Countries</th>
      <th>Tags</th>
      <th>Main genre</th>
      <th>Related genres</th>
      <th>Performer</th>
      <th>Preview picture</th>
      <th>Age restriction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.name %></td>
        <td><%= track.description %></td>
        <td><%= track.source_link %></td>
        <td><%= track.release_date %></td>
        <td><%= track.duration %></td>
        <td><%= track.countries %></td>
        <td><%= track.tags %></td>
        <td><%= track.main_genre %></td>
        <td><%= track.related_genres %></td>
        <td><%= track.performer %></td>
        <td><img class = "preview-image" src ="<%= track.preview_picture %>"></td>
        <td><%= track.age_rest %></td>
        <td><%= link_to "Show", track %></td>
        <td><%= link_to "Edit", edit_track_path(track) %></td>
        <td><%= link_to "Destroy", track, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Track", new_track_path %>
