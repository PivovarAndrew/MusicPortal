<div class="container">
<% if @album.tracks %>
  <h1 class="secondary-header-default">ALBUM</h1>
  <h2>
    <%= @album.name %>
  </h2>
  <%= image_tag(@album.image_preview_url, class: "sidebar-album-preview-image") %>
    <% @album.tracks.each_with_index do |track, counter| %>
      <div class="form-group">
          <%= "#{counter + 1}  #{track.name}" %>
          <div class="converted-time">
             <%= track.duration.to_s(:time) %>
          </div>
      </div>
    <% end %>
    <% if current_user %>  
       <div id="like-block">
          <%= render partial: "likes/form", locals: { album: @album } %>
       </div>
    <% end %>
    <% if current_user.try(:admin? || :editor?) %>
        <%= link_to "Edit", edit_album_path(@album) %> |
        <%= link_to "Back", albums_path %>
    <% end %>
<% end %>
</div>
