<div class="w3-animate-opacity">
    <% @albums.each do |album| %>
        <%= form_for album do |form| %>
            <div class="col-md-4 col-lg-2 item medium-bottom-interval">
                <%= image_tag(album.image_preview_url, { class: "album-preview-image box selected-album-sidebar-open", onclick: "getAlbum(#{album.id})", "remote": true }) %>
                <div class="album-description">
                    <div class="album-name selected-album-sidebar-open" onclick="getAlbum(<%= album.id %>)">
                        <%= album.name %>
                    </div>
                    <div class = "album-release-date">
                        <%= album.release_date.year %>
                    </div>
                </div>    
            </div>
        <% end %>
    <% end %>
</div>

<br>
