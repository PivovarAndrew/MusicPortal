<% if current_user %> 
   <% unless current_user.albums.include? @current_album %>
      <%= button_tag "Add to playlist +", { id: "add-album-to-playlist-button", onclick: "addAlbumToPlaylist(#{@current_album.id})", class: "submit-button small-bottom-interval small-top-interval", "remote": true } %>
   <% else %>
      <%= button_tag "Album has already been added to playlist", { id: "add-album-to-playlist-button", onclick: "addAlbumToPlaylist(#{@current_album.id})", class: "submit-button small-bottom-interval small-top-interval", "remote": true } %>
   <% end %>
<% end %>
