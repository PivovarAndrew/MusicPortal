<div class="container-fluid">
    <div class="row">
        <div id="pie-chart-link" class="col-sm-4 first-tab">
            <h5 class="mb-0">01.</h5>
            <h1 class="mb-0 tab-header"><strong>Круговые д-мы</strong></h1>
        </div>
        <div id="bar-chart-link" class="col-sm-4 second-tab">
            <h5 class="mb-0">02.</h5>
            <h1 class="mb-0 tab-header"><strong>Гистограммы</strong></h1>
        </div>
        <div id="line-chart-link" class="col-sm-4 third-tab">
            <h5 class="mb-0">03.</h5>
            <h1 class="mb-0 tab-header"><strong>Линейные графики</strong></h1>
        </div>
    </div>
</div>

<br/>

<div id="pie-chart" class="container-fluid tab-content">
    <strong class="entity-title">Топ альбомов</strong>
    <div class="container-fluid">
        <div class="row">
            <!--<div class="col-sm-6 left-content">
                <strong class="header-default">Performers<strong>
            </div>-->
            <div class="col-sm-6">
               <%= pie_chart @albums_groupped_by_performer, download: true, title: "по исполнителям", legend: "bottom" %>
            </div>

            <div class="col-sm-6">
                <%= pie_chart @albums_groupped_by_countries, download: true, title: "по странам", legend: "bottom" %>
            </div>
        </div>

        <div class="row medium-bottom-interval">
            <div class="col-sm-6">
                <%= pie_chart @albums_groupped_by_genres, download: true, title: "по жанрам", legend: "bottom" %>
            </div>

            <div class="col-sm-6">
                <%= pie_chart @albums_groupped_by_age_restrictions, download: true, title: "по возрастным ограничениям", legend: "bottom" %>
            </div>
        </div>
    </div>
</div>

<div id="bar-chart" class="container-fluid tab-content">
    <div class="row medium-bottom-interval">
        <%= bar_chart @album_performers_groupped_by_likes_count, download: true, title: "Лайки по исполнителям", colors: random_hex_colors %>
    </div>

    <div class="row medium-bottom-interval">
        <%= bar_chart @album_genres_groupped_by_likes_count, download: true, title: "Лайки по жанрам", colors: random_hex_colors %>
    </div>

    <div class="row medium-bottom-interval">
        <%= column_chart @album_countries_groupped_by_likes_count, download: true, title: "Лайки по странам", colors: random_hex_colors  %>
    </div>

    <div class="row medium-bottom-interval">
        <%= column_chart @album_age_restrictions_groupped_by_likes_count, download: true, title: "Лайки по возрастным ограничениям", colors: random_hex_colors  %>
    </div>

    <div class="row medium-bottom-interval">
        <%= bar_chart @album_performers_groupped_by_dislikes_count, download: true, title: "Дизлайки по исполнителям", colors: random_hex_colors  %>
    </div>

    <div class="row medium-bottom-interval">
        <%= bar_chart @album_genres_groupped_by_dislikes_count, download: true, title: "Дизлайки по жанрам", colors: random_hex_colors  %>
    </div>

    <div class="row medium-bottom-interval">
        <%= column_chart @album_countries_groupped_by_dislikes_count, download: true, title: "Дизлайки по странам", colors: random_hex_colors  %>
    </div>

    <div class="row medium-bottom-interval">
        <%= column_chart @album_age_restrictions_groupped_by_dislikes_count, download: true, title: "Дизлайки по возрастным ограничениям", colors: random_hex_colors  %>
    </div>

    <div class="row medium-bottom-interval">
        <%= bar_chart @album_performers_groupped_by_comments_count, download: true, title: "Комментарии по исполнителям", colors: random_hex_colors  %>
    </div>

    <div class="row medium-bottom-interval">
        <%= bar_chart @album_genres_groupped_by_comments_count, download: true, title: "Комментарии по жанрам", colors: random_hex_colors  %>
    </div>

    <div class="row medium-bottom-interval">
        <%= column_chart @album_countries_groupped_by_comments_count, download: true, title: "Комментарии по странам", colors: random_hex_colors  %>
    </div>

    <div class="row medium-bottom-interval">
        <%= column_chart @album_age_restrictions_groupped_by_comments_count, download: true, title: "Комментарии по возрастным ограничениям", colors: random_hex_colors  %>
    </div>
</div>

