<p id="notice">
  <%= notice %>
</p>

<% if @current_album.tracks %>
  <h1>ALBUM</h1>
  <div class="field form-group">
  <%= label_tag "", @current_album.name, { class: "lbl-default", style: "display:inline-block;color:black" } %>
  <div class="pull-right">
    <% if current_user.try(:admin?) or current_user.try(:editor?) %>
          <%= link_to edit_album_path(@current_album), class: "btn btn-sm btn-warning" do %>
              <i class="glyphicon glyphicon-edit glyphicon-white"></i>
          <% end %>     
          <%= link_to album_path(@current_album), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-sm btn-danger" do %>
              <i class="glyphicon glyphicon-remove glyphicon-white"></i>
          <% end %>
    <% end %>
  </div>
  </div>
  <%= image_tag(@current_album.image_preview_url, class: "sidebar-album-preview-image small-bottom-interval") %>
    <% @current_album.tracks.each_with_index do |track, counter| %>
      <div class="field form-group">
          <%= "#{counter + 1}  #{track.name}" %>
          <div class="converted-time pull-right" >
            <%= track.duration %>
          </div>
      </div>
    <% end %>
<% end %>

<%= button_tag "Add to playlist +", type: "submit", class: "submit-button small-bottom-interval small-top-interval" %>
